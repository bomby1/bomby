{
  "session": {
    "max_age_seconds": 3600,
    "reuse_state": true,
    "force_per_job_relogin": false,
    "session_validation_timeout": 10000
  },
  "retry_policy": {
    "max_attempts": 3,
    "base_backoff_seconds": 2,
    "max_backoff_seconds": 60,
    "backoff_multiplier": 2.0,
    "jitter": true
  },
  "timeouts": {
    "generation_max_timeout": 600,
    "export_verification_timeout": 300,
    "page_load_timeout": 30000,
    "element_wait_timeout": 10000
  },
  "visual_matching": {
    "orb_min_matches": 10,
    "ssim_threshold": 0.98,
    "stability_count": 5,
    "poll_interval": 3.0,
    "template_match_threshold": 0.8
  },
  "export": {
    "default_quality": "Recommended",
    "default_resolution": "1080p",
    "default_format": "mp4",
    "default_framerate": "60",
    "max_title_length": 45
  },
  "logging": {
    "level": "INFO",
    "save_screenshots": true,
    "max_log_files": 10,
    "screenshot_retention_days": 7
  },
  "performance": {
    "max_concurrent_jobs": 1,
    "screenshot_quality": 90,
    "memory_limit_mb": 1024
  }
}